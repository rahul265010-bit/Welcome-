  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Special Greeting</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      text-align: center;
      padding: 50px;
      transition: background 0.5s;
      overflow-x: hidden;
      position: relative;
    }

    #nameInput {
      padding: 10px;
      font-size: 16px;
      width: 200px;
    }

    #greeting {
      margin-top: 20px;
      font-size: 24px;
      font-weight: bold;
    }

    #followBtn {
      margin-top: 20px;
      padding: 10px 20px;
      font-size: 16px;
      cursor: pointer;
      display: none;
    }

    .heart {
      position: fixed;
      top: 0;
      font-size: 24px;
      animation-name: float;
      animation-timing-function: linear;
      pointer-events: none;
    }

    @keyframes float {
      0% { transform: translateY(0); opacity: 1; }
      100% { transform: translateY(-100vh); opacity: 0; }
    }
  </style>
